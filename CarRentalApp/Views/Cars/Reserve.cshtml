@model IEnumerable<CarRentalApp.Models.Car>

<div class="stats-pos">
    <table class="table">
        <tr class="table">
            <th>Manufacturer</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            @if (item.IsAvailable == false)
            {
                <tr>
                    <td>@item.Manufacturer</td>
                    <td>@item.CarModel</td>
                    <td>@item.ManufacturingYear</td>
                    <td>@item.Price</td>
                    <td><a style="color: black" asp-controller="Cars" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
                </tr>
            }
        }
    </table>
</div>
